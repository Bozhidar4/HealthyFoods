            <li data-flip-title="Red">
                <img src="http://www.1001recepti.com/images/photos/articles/banani_1_[1072].jpg">
            </li>
            <li data-flip-title="Razzmatazz" data-flip-category="Purples">
                <img src="http://garcia.patevoditel.bg/images/kulinaren_tur/Orange_Market.jpg">
            </li>
            <li data-flip-title="Deep Lilac" data-flip-category="Purples">
