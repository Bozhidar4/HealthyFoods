            </li>
            <li data-flip-title="Apple" data-flip-category="Greens">
                <img src="http://www.bobthechef.com/sites/bobthechef.com/files/imagecache/scale_and_crop-640x440/info/images/well_asparagus.jpg">
            </li>
        </ul>
    </div>
    <script>
    var flat = $("#flat").flipster({
        style: 'flat',
        spacing: -0.25
    });
    </script>
    </article>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Protein)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carbohydrates)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Energy)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Image == null)
                    {
                        item.Image = "https://www.myfarm.bg/wp-content/uploads/2014/01/Zelena-salata-1-e1390155666925.jpg";
                    }
                    <img src="@Url.Content(item.Image)" height="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Protein)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Carbohydrates)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Energy)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.VegetableID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.VegetableID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.VegetableID })
                </td>
            </tr>
        }

    </table>

