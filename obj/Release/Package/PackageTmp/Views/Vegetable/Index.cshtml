        <ul>
            <li data-flip-title="Red">
                <img src="http://www.gradinar.net/news_pict/2012/1337094685_52256_1.jpg">
            </li>
            <li data-flip-title="Razzmatazz" data-flip-category="Purples">
                <img src="http://www.zdrave.ws/wp-content/uploads/2016/06/brokoli_morkovi.jpg">
            </li>
            <li data-flip-title="Deep Lilac" data-flip-category="Purples">
                <img src="http://gradcontent.com/lib/600x350/cabbage4.jpg">
            </li>
            <li data-flip-title="Daisy Bush" data-flip-category="Purples">
                <img src="http://gotvach.bg/files/lib/600x350/tomatoes4.jpg">
            </li>
            <li data-flip-title="Cerulean Blue" data-flip-category="Blues">
                <img src="https://webnews.bg/uploads/images/99/9899/259899/640x.jpg?_=1477654233">
            </li>
            <li data-flip-title="Dodger Blue" data-flip-category="Blues">
                <img src="http://lechitel.net/wp-content/uploads/2015/09/cherveno-cveklo.jpeg">
            </li>
            <li data-flip-title="Cyan" data-flip-category="Blues">
                <img src="http://otslabvane-dieti.net/wp-content/uploads/2013/08/kmet-livanski-izvadi-morkov-gigantski-snimka-142663.jpg">
            </li>
